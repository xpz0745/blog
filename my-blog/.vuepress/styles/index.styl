// 去除左上角标题，作者，标签等
.page .page-title {
    display: none;
}

.navbar {
    background: transparent !important;
}

.navbar .links {
    background-color: transparent !important;
}

.home-blog .hero {
	background-size: cover !important;
	background-position: center 0 !important;
}

.home-blog .hero #homeBlog {
	left: 0;
	bottom: 3.6rem;
	width: 100%;
	position: absolute;
}

.home-blog .hero a::after {
	content: "";
	position: absolute;
	display: block;
	left: calc(50% - 0.6rem);
	width: 1rem;
	height: 1rem;
	border: 0.25rem solid #fff;
	border-bottom-right-radius: 0.15rem;
	border-top: none;
	border-left: none;
	transform-origin: 50% 50%;
	transform: rotate(45deg);
	cursor pointer;
	-webkit-animation: arrowMove-data 2.5s infinite;
	animation: arrowMove-data 2.5s infinite;
}

.home-blog .home-more {
    display: block;
	margin: 0 auto;
    position: relative;
}

.hero::before {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

@keyframes arrowMove-data {
  0% {
    transform: translateY(0px) rotate(45deg);
  }
  100% {
    transform: translateY(60px) rotate(45deg);
    border: 0.25rem solid rgba(255, 255, 255, 0.5);
    border-bottom-right-radius: 0.15rem;
    border-top: none;
    border-left: none;
  }
}

.home-blog .home-blog-wrapper .info-wrapper .category-wrapper .category-item {
    box-shadow: 0 0 0px !important;
    background-color: transparent !important;
}